<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="INFO">
  <Appenders>
    <Console name="Console" target="SYSTEM_OUT">
      <PatternLayout pattern="%d{HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%n"/>
    </Console>
    <File name="File" fileName="output.log" bufferedIO="false" advertiseURI="file://home/sysadmin/Desktop/output.log" advertise="true">
    	 <PatternLayout pattern="%d{HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%n"/>
    </File>
  </Appenders>
  <Loggers>
  <Logger name="org.apache.logging.log4j.console" level="debug">
      <AppenderRef ref="Console"/>
  </Logger>
    <Root level="info" additivity="true">
      <AppenderRef ref="File"/>
    </Root>
  </Loggers>
</Configuration>